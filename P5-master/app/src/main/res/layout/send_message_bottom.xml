<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/grey_300"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">


    <RelativeLayout
        android:id="@+id/layout_addMedia_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imageButton_addMedia"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/grey_300"
            android:onClick="onClick"
            android:src="@drawable/add_contact" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_editText_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center">

        <EditText
            android:id="@+id/send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:background="@drawable/background_white_round_edge"
            android:hint="@string/send_message"
            android:inputType="textLongMessage"
            android:padding="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_otherButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/sendMessage_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_300"
            android:onClick="onClick"
            android:src="@drawable/send_button"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/grey_300"
            android:src="@drawable/record" />


    </RelativeLayout>


